# ============================================
# NordVPN Meshnet Docker Container Configuration
# ============================================
# Copy this file to .env and fill in your values:
#   cp .env.template .env
#
# IMPORTANT: Never commit your .env file to git!
# ============================================

# ============================================
# REQUIRED: NordVPN Authentication
# ============================================
# A token is required for logging in to NordVPN.
# Generate one at: NordVPN Dashboard -> Services -> NordVPN -> Manual Setup -> Generate new token

# Option 1: Token in environment variable (recommended for most users)
NORDVPN_TOKEN=your_nordvpn_token_here

# Option 2: Load token from file (for Docker secrets, uncomment and set path)
# NORDVPN_TOKENFILE=/run/secrets/nordvpn_token

# ============================================
# User/Group IDs (Important for Synology NAS)
# ============================================
# Find your IDs by running: id <username>
# Essential to prevent permission issues with mounted volumes.
PUID=1026
PGID=100

# ============================================
# Timezone
# ============================================
# Format: Region/City (e.g., America/New_York, Europe/London, Asia/Tokyo)
TZ=Etc/UTC

# ============================================
# OPTIONAL: Device Configuration
# ============================================
# Set a nickname for this device on Meshnet (visible to all peers)
NORDVPN_NICKNAME=my-docker-meshnet

# ============================================
# OPTIONAL: Healthcheck Configuration
# ============================================
# Interval in seconds between connectivity checks (default: 300)
NORDVPN_HEALTHCHECK_INTERVAL=300

# URL to verify connectivity (use a host on your Meshnet if available)
NORDVPN_HEALTHCHECK_URL=www.google.com

# ============================================
# OPTIONAL: Debug Mode
# ============================================
# Enable for verbose logging (uncomment to enable)
# NORDVPN_MESHNET_DEBUG=true

# ============================================
# Meshnet Peer Permissions
# ============================================
# Peers must be entered with their FQDN/hostname (e.g., my-device.nord)
# or email address, comma-separated for multiple peers.
#
# DENY configuration is applied first, then ALLOW (ALLOW overwrites DENY)
# ============================================

# --- DENY Permissions ---
# Block peers from using this node as a router
NORDVPN_DENY_PEER_ROUTING=

# Block peers from accessing the local network of this node
NORDVPN_DENY_PEER_LOCAL=

# Block peers from sharing files with this node
NORDVPN_DENY_PEER_FILESHARE=

# Block peers from remote access to this node
NORDVPN_DENY_PEER_REMOTE=

# --- ALLOW Permissions ---
# Allow peers to use this node as a router (route traffic through this device)
NORDVPN_ALLOW_PEER_ROUTING=

# Allow peers to access the local network of this node (requires ROUTING permission)
NORDVPN_ALLOW_PEER_LOCAL=

# Allow peers to share files with this node
NORDVPN_ALLOW_PEER_FILESHARE=

# Allow peers to use remote access on this node
NORDVPN_ALLOW_PEER_REMOTE=
